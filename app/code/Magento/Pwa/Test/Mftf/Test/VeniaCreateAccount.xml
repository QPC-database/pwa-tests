<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="CreateAccount">
        <annotations>
            <features value="PWA"/>
            <stories value="Customer Account"/>
            <title value="User should be able to create account on Venia storefront."/>
            <description value="User should be able to create account on Venia storefront."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MC-35865"/>
            <group value="PWA"/>
        </annotations>


        <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront1"/>



        <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm" />

        <actionGroup ref="CreateAccount" stepKey="enterEmailForAccount">
            <argument name="Customer" value="VeniaCustomer1"/>
        </actionGroup>

        <actionGroup ref="AssertSuccessfulSignIn" stepKey="assertUserSignIn">
            <argument name="Customer" value="VeniaCustomer1"/>
        </actionGroup>

        <actionGroup ref="SignOut" stepKey="signOutFromTheAccount"/>
        <actionGroup ref="GoToVeniaDesktopStorefront" stepKey="goToVeniaDesktopStorefront2"/>
        <actionGroup ref="NavigateToSignInForm" stepKey="navigateToSignInFOrm1"/>

        <wait time="3" stepKey="test1"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSignInSection.forgotUsernamePassword}}" stepKey="wait11"/>
        <click selector="{{VeniaMainMenuSignInSection.forgotUsernamePassword}}" stepKey="clickForgotUserNamePasswordLink"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuForgotPasswordSection.email}}" stepKey="waitForEmailField"/>
        <fillField selector="{{VeniaMainMenuForgotPasswordSection.email}}" userInput="$customerEmailEnterEmailForAccount" stepKey="fillEmail"/>
        <click selector="{{VeniaMainMenuForgotPasswordSection.submit}}" stepKey="clickSubmitButton"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuForgotPasswordSection.successMessage}}" stepKey="waitForSuccessMessage"/>
        <wait time="3" stepKey="test11"/>
        <see stepKey="assertSuccessMessage" userInput="If there is an account associated with $customerEmailEnterEmailForAccount you will receive an email with a link to change your password."/>

    </test>
</tests>
