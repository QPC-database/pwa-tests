                <argument name="color" value="Lilac"/>
                <argument name="size" value="L"/>
                <argument name="quantity" value="3"/>
            </actionGroup>

            <click selector="{{VeniaProduct.addToCart}}" stepKey="clickAddToCart1"/>
            <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.noItemsInShoppingCart}}" time="10" stepKey="waitForNoProductMessageNotVisible1"/>
            <waitForPwaElementVisible selector="{{VeniaShoppingCart.productNameByIndex('1')}}" time="10" stepKey="waitForProductName1"/>
        </before>

        <click selector="{{VeniaShoppingCart.checkout}}" stepKey="clickOnCheckout1"/>
        <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.checkout}}" stepKey="waitForCheckoutButtonToDisappear1"/>

        <seeElement selector="{{VeniaShoppingCartDetails.orderDetailsMainArea}}" stepKey="seeOrderDetailsMainArea1"/>
        <seeElement selector="{{VeniaShoppingCartDetails.shipToMainArea}}" stepKey="seeOrderShipToMainArea1"/>
        <seeElement selector="{{VeniaShoppingCartDetails.payWithMainArea}}" stepKey="seeOrderPayWithMainArea1"/>
        <seeElement selector="{{VeniaShoppingCartDetails.getItByMainArea}}" stepKey="seeOrderGetItByMainArea1"/>
        <seeElement selector="{{VeniaShoppingCartDetails.totalMainArea}}" stepKey="seeOrderTotalMainArea1"/>
        <seeElement selector="{{VeniaShoppingCartDetails.placeOrder}}" stepKey="seeOrderPlaceOrderButton1"/>

        <click selector="{{VeniaShoppingCartDetails.addShipToInformation}}" stepKey="clickOnAddShipToLink1"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartShippingAddress.firstName}}" stepKey="waitForPlaceOrderButtonToAppear1"/>

        <seeElement selector="{{VeniaShoppingCartShippingAddress.firstName}}" stepKey="seeShipToFirstNameField1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.lastName}}" stepKey="seeShipToLastNameField1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.streetAddress}}" stepKey="seeShipToStreetAddress1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.city}}" stepKey="seeShipToCity1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.zipCode}}" stepKey="seeShipToZipCode1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.state}}" stepKey="seeShipToState1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.phoneNumber}}" stepKey="seeShipToPhoneNumber1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.email}}" stepKey="seeShipToEmail1"/>

        <seeElement selector="{{VeniaShoppingCartShippingAddress.save}}" stepKey="seeShipToSaveButton1"/>
        <seeElement selector="{{VeniaShoppingCartShippingAddress.cancel}}" stepKey="seeShipToCancelButton1"/>
    </test>

