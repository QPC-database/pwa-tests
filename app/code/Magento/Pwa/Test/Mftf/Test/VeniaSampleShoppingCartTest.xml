<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="VeniaShoppingCartTest1">
        <annotations>
            <stories value="Venia Shopping Cart Tests"/>
            <title value="Venia Shopping Cart Test 1"/>
            <description value="Should be able to open the Shopping Cart from the Storefront."/>
            <testCaseId value="MQE-1407"/>
            <severity value="CRITICAL"/>
            <group value="veniaTheme"/>
            <group value="veniaShoppingCart"/>
        </annotations>

        <before>
            <actionGroup ref="GoToVeniaMobileStorefront" stepKey="goToVeniaMobileStorefront1"/>
        </before>

        <click selector="{{VeniaHeader.shoppingCartIcon}}" stepKey="clickOnShoppingCartButton1"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCart.mainArea}}" stepKey="waitForShoppingCartVisible1"/>

        <seeElement selector="{{VeniaShoppingCart.noItemsInShoppingCart}}" stepKey="seeEmptyShoppingCartMessage1"/>
        <seeElement selector="{{VeniaShoppingCart.continueShopping}}" stepKey="seeContinueShoppingButton1"/>
    </test>

    <test name="VeniaShoppingCartTest2">
        <annotations>
            <stories value="Venia Shopping Cart Tests"/>
            <title value="Venia Shopping Cart Test 2"/>
            <description value="Should be able to see the correct Product details in the Shopping Cart."/>
            <testCaseId value="MQE-1407"/>
            <severity value="CRITICAL"/>
            <group value="veniaTheme"/>
            <group value="veniaShoppingCart"/>
        </annotations>

        <before>
            <actionGroup ref="GoToVeniaMobileStorefront" stepKey="goToVeniaMobileStorefront1"/>

            <actionGroup ref="OpenStorefrontCategoryByName" stepKey="openStorefrontCategoryByName1">
                <argument name="categoryName" value="Shop The Look"/>
                <argument name="productName" value="Valeria Two-Layer Tank"/>
            </actionGroup>

            <actionGroup ref="OpenProductFromCategoryPage" stepKey="openProductFromCategoryPage1">
                <argument name="productName" value="Valeria Two-Layer Tank"/>
                <argument name="categoryName" value="Shop The Look"/>
            </actionGroup>

            <actionGroup ref="SetProductColorAndSizeAndQuantityOptions" stepKey="addProductToCartWithColorAndSizeAndQuantityOptions1">
                <argument name="color" value="Lilac"/>
                <argument name="size" value="L"/>
                <argument name="quantity" value="3"/>
            </actionGroup>

            <click selector="{{VeniaProduct.addToCart}}" stepKey="clickAddToCart1"/>
            <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.noItemsInShoppingCart}}" time="10" stepKey="waitForPwaElementNotVisible2"/>
            <waitForPwaElementVisible selector="{{VeniaShoppingCart.productNameByIndex('1')}}" time="10" stepKey="waitForPwaElementVisible2"/>
        </before>

        <seeElement selector="{{VeniaShoppingCart.productImageByIndex('1')}}" stepKey="seeProductImage1"/>
        <see selector="{{VeniaShoppingCart.productNameByIndex('1')}}" userInput="{{ValeriaTwoLayerTank.name}}" stepKey="seeProductName1"/>
        <see selector="{{VeniaShoppingCart.productColorByIndex('1')}}" userInput="Lilac" stepKey="seeProductColor1"/>
        <see selector="{{VeniaShoppingCart.productSizeByIndex('1')}}" userInput="L" stepKey="seeProductSize1"/>
        <seeOptionIsSelected selector="{{VeniaShoppingCart.productQuantityByIndex('1')}}" userInput="3" stepKey="seeProductQuantity1"/>
    </test>

    <test name="VeniaShoppingCartTest3">
        <annotations>
            <stories value="Venia Shopping Cart Tests"/>
            <title value="Venia Shopping Cart Test 3"/>
            <description value="Should be able to see the 'Ship To' address section in the Shopping Cart."/>
            <testCaseId value="MQE-1407"/>
            <severity value="CRITICAL"/>
            <group value="veniaTheme"/>
            <group value="veniaShoppingCart"/>
