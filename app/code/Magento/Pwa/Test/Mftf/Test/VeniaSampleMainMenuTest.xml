        <seeElement selector="{{VeniaMainMenuForgotPasswordSection.email}}" stepKey="seeForgotPasswordEmailInput1"/>
        <seeElement selector="{{VeniaMainMenuForgotPasswordSection.submit}}" stepKey="seeForgotPasswordSubmitButton1"/>
    </test>

