<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="VeniaMainMenuTest1">
        <annotations>
            <stories value="Venia Main Menu Tests"/>
            <title value="Venia Main Menu Test 1"/>
            <description value="Should be able to access the Main Category Menu via the Venia Storefront."/>
            <testCaseId value="MQE-1407"/>
            <severity value="CRITICAL"/>
            <group value="veniaTheme"/>
            <group value="veniaMainMenu"/>
        </annotations>

        <before>
            <actionGroup ref="GoToVeniaMobileStorefront" stepKey="goToVeniaMobileStorefront1"/>
        </before>

        <click selector="{{VeniaHeader.hamburgerMenu}}" stepKey="clickOnHamburgerMenu1"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.mainArea}}" time="30" stepKey="waitForMainAreaVisible1"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSection.signIn}}" time="30" stepKey="waitForSignInButtonVisible1"/>

        <seeElement selector="{{VeniaMainMenuSection.categoryByName('Bottoms')}}" stepKey="seeCategory1"/>
        <seeElement selector="{{VeniaMainMenuSection.categoryByName('Tops')}}" stepKey="seeCategory2"/>
        <seeElement selector="{{VeniaMainMenuSection.categoryByName('Dresses')}}" stepKey="seeCategory3"/>
        <seeElement selector="{{VeniaMainMenuSection.categoryByName('Accessories')}}" stepKey="seeCategory4"/>
        <seeElement selector="{{VeniaMainMenuSection.categoryByName('Shop The Look')}}" stepKey="seeCategory5"/>
    </test>

    <test name="VeniaMainMenuTest2">
        <annotations>
            <stories value="Venia Main Menu Tests"/>
            <title value="Venia Main Menu Test 2"/>
            <description value="Should be able to access the Sign In Menu via the Main Menu."/>
            <testCaseId value="MQE-1407"/>
            <severity value="CRITICAL"/>
            <group value="veniaTheme"/>
            <group value="veniaMainMenu"/>
        </annotations>

        <before>
            <actionGroup ref="GoToVeniaMobileStorefront" stepKey="goToVeniaMobileStorefront1"/>

            <click selector="{{VeniaHeader.hamburgerMenu}}" stepKey="clickOnHamburgerMenu1"/>
            <waitForPwaElementVisible selector="{{VeniaMainMenuSection.mainArea}}" time="30" stepKey="waitForMainAreaVisible1"/>
            <waitForPwaElementVisible selector="{{VeniaMainMenuSection.signIn}}" time="30" stepKey="waitForSignInButtonVisible1"/>
        </before>

        <click selector="{{VeniaMainMenuSection.signIn}}" stepKey="clickOnSignIn1"/>
        <waitForPwaElementVisible selector="{{VeniaMainMenuSignInSection.mainArea}}" time="30" stepKey="waitForMainAreaVisible1"/>

        <seeElement selector="{{VeniaMainMenuSignInSection.mainArea}}" stepKey="seeMainArea1"/>
        <seeElement selector="{{VeniaMainMenuSignInSection.username}}" stepKey="seeUsernameField1"/>
        <seeElement selector="{{VeniaMainMenuSignInSection.password}}" stepKey="seePasswordField1"/>
        <seeElement selector="{{VeniaMainMenuSignInSection.signIn}}" stepKey="seeSignInButton1"/>
        <seeElement selector="{{VeniaMainMenuSignInSection.forgotUsernamePassword}}" stepKey="seeForgotYourUsernamePasswordLink1"/>
        <seeElement selector="{{VeniaMainMenuSignInSection.createAnAccount}}" stepKey="seeCreateAnAccountButton1"/>
    </test>

    <test name="VeniaMainMenuTest3">
        <annotations>
            <stories value="Venia Main Menu Tests"/>
