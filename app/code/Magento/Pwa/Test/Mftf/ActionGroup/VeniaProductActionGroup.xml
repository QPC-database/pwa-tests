<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SetProductColorAndSizeAndQuantityOptions">
        <arguments>
            <argument name="color" type="string"/>
            <argument name="size" type="string"/>
            <argument name="quantity" type="string"/>
        </arguments>
        <wait time="5" stepKey="wait123"/>
        <waitForPwaElementVisible sselector="{{VeniaProduct.productColorByValue(color)}}" time="30" stepKey="waitFOrProducttoDisplay"/>
        <click selector="{{VeniaProduct.productColorByValue(color)}}" stepKey="clickOnColorOption01"/>
        <click selector="{{VeniaProduct.productSizeByValue(size)}}" stepKey="clickOnSizeOption01"/>
        <selectOption selector="{{VeniaProduct.productQuantity}}" userInput="{{quantity}}" stepKey="selectProductQuantity01"/>
    </actionGroup>

    <actionGroup name="AddToCart">
        <waitForPwaElementVisible sselector="{{VeniaProduct.addToCart)}}" time="30" stepKey="waitForAddToCartButtonToBeReady"/>
        <click selector="{{VeniaProduct.addToCart}}" stepKey="clickAddToCart1"/>
        <wait time="5" stepKey="wait1134" />
        <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.noItemsInShoppingCart}}" time="30" stepKey="waitForNoProductMessageNotVisible01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCart.productImageByIndex('1')}}" time="30" stepKey="waitForSubTotalTitle01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCart.productNameByIndex('1')}}" time="30" stepKey="waitForCheckoutButton01"/>
    </actionGroup>

    <actionGroup name="GoToProductDetailsPage">
        <arguments>
            <argument name="product" defaultValue="ValeriaTwoLayerTank"/>
        </arguments>
        <amOnUrl url="{{product.url}}" stepKey="goToVeniaProductDetailsPage"/>
        <waitForPwaElementVisible selector="{{VeniaProduct.productName}}" time="30" stepKey="waitForPwaElementVisible1"/>
    </actionGroup>

</actionGroups>
