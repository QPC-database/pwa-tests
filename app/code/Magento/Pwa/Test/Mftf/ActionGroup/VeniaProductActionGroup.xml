<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SetProductColorAndSizeAndQuantityOptions">
        <arguments>
            <argument name="color" type="string"/>
            <argument name="size" type="string"/>
            <argument name="quantity" type="string"/>
        </arguments>

        <click selector="{{VeniaProduct.productColorByValue(color)}}" stepKey="clickOnColorOption01"/>
        <click selector="{{VeniaProduct.productSizeByValue(size)}}" stepKey="clickOnSizeOption01"/>
        <selectOption selector="{{VeniaProduct.productQuantity}}" userInput="{{quantity}}" stepKey="selectProductQuantity01"/>
    </actionGroup>

    <actionGroup name="AddToCartAndProceedToCheckout">
        <click selector="{{VeniaProduct.addToCart}}" stepKey="clickAddToCart1"/>
        <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.noItemsInShoppingCart}}" time="10" stepKey="waitForNoProductMessageNotVisible01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCart.productImageByIndex('1')}}" time="10" stepKey="waitForSubTotalTitle01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCart.productNameByIndex('1')}}" time="10" stepKey="waitForCheckoutButton01"/>

        <click selector="{{VeniaShoppingCart.checkout}}" stepKey="clickOnCheckout01"/>
        <waitForPwaElementNotVisible selector="{{VeniaShoppingCart.checkout}}" time="10" stepKey="waitForCheckoutButtonToDisappear01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetails.orderDetailsMainArea}}" time="10" stepKey="waitForAddShipToInfoButton01"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetails.shipToMainArea}}" time="10" stepKey="waitForMainArea1"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetails.payWithMainArea}}" time="10" stepKey="waitForMainArea2"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetails.getItByMainArea}}" time="10" stepKey="waitForMainArea3"/>
        <waitForPwaElementVisible selector="{{VeniaShoppingCartDetails.totalMainArea}}" time="10" stepKey="waitForMainArea4"/>
    </actionGroup>
</actionGroups>
