<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="GoToVeniaMobileStorefront">
        <resizeWindow width="750" height="1334" stepKey="resizeWindowForMobile1"/>

        <amOnUrl url="{{Venia.url}}" stepKey="goToVeniaStorefront1"/>
        <waitForPwaElementVisible selector="{{VeniaStorefront.productImage('Shop The Look')}}" time="30" stepKey="waitForPwaCategoryVisible01"/>
    </actionGroup>

    <actionGroup name="OpenStorefrontCategoryByName">
        <arguments>
            <argument name="categoryName" type="string"/>
            <argument name="productName" type="string"/>
        </arguments>

        <click userInput="{{categoryName}}" stepKey="clickOnCategoryName1"/>
        <waitForPwaElementNotVisible selector="{{VeniaStorefront.productImage(categoryName)}}" time="30" stepKey="waitForPwaElementNotVisible01"/>
        <waitForPwaElementVisible selector="{{VeniaCategory.productImageAlt(productName)}}" time="30" stepKey="waitForPwaElementVisible01"/>
    </actionGroup>
</actionGroups>
